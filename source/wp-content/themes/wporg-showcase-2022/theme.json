{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"custom": {
			"wporg-site-screenshot": {
				"border": {
					"color": "rgba(30, 30, 30, 0.1)",
					"width": "clamp(4px, 2vw, 20px)"
				}
			},
			"wporg-query-filters": {
				"color": {
					"background": "var(--wp--preset--color--white)",
					"text": "var(--wp--preset--color--charcoal-1)"
				},
				"border": {
					"color": "var(--wp--preset--color--light-grey-1)",
					"style": "solid",
					"width": "1px"
				},
				"spacing": {
					"padding": {
						"block": "var(--wp--preset--spacing--10)",
						"inline-start": "calc(var(--wp--preset--spacing--10) * 1.5)",
						"inline-end": "calc(var(--wp--preset--spacing--10) * 0.8)"
					}
				},
				"toggle": {
					"color": {
						"background": "var(--wp--preset--color--white)",
						"text": "var(--wp--preset--color--charcoal-1)"
					},
					"hover": {
						"color": {
							"background": "var(--wp--preset--color--light-grey-2)",
							"text": "var(--wp--preset--color--charcoal-1)",
							"count": "var(--wp--preset--color--blueberry-1)"
						}
					},
					"active": {
						"color": {
							"background": "var(--wp--preset--color--charcoal-1)",
							"text": "var(--wp--preset--color--white)",
							"count": "var(--wp--preset--color--blueberry-2)"
						}
					},
					"focus": {
						"color": {
							"outline": "var(--wp--preset--color--blueberry-1)",
							"inset": "var(--wp--preset--color--white)"
						}
					},
					"count": {
						"color": {
							"background": "var(--wp--preset--color--light-grey-2)",
							"text": "var(--wp--preset--color--charcoal-1)"
						},
						"hover": {
							"color": {
								"background": "var(--wp--preset--color--light-grey-2)",
								"text": "var(--wp--preset--color--charcoal-1)"
							}
						},
						"active": {
							"color": {
								"background": "var(--wp--preset--color--charcoal-1)",
								"text": "var(--wp--preset--color--white)"
							}
						}
					}
				},
				"option": {
					"active": {
						"color": {
							"background": "var(--wp--preset--color--light-grey-2)",
							"text": "var(--wp--preset--color--charcoal-1)"
						}
					}
				}
			}
		}
	},
	"styles": {
		"blocks": {
			"core/quote": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--heading-6)"
				}
			}
		}
	}
}
